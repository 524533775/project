bg-image($url)
  background-image url($url + "@2x.png")
  @media (min-device-pixel-ratio 3),(-webkit-min-device-pixel-ratio 3)
    background-image url($url + "@3x.png")
bg-star($url)
  background-image url("../star/"+ $url + "@2x.png")
  @media (min-device-pixel-ratio 3),(-webkit-min-device-pixel-ratio 3)
    background-image url("../star/" + $url + "@3x.png")
border-1px($color)
  position relative
  &:after
    position: absolute
    left: 0
    bottom: 0
    content ''
    height 1px
    background $color
    transform scaleY(.5)
    width: 100%



